<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 机械教配色方案 - 基于《命运2》和《战锤40K》 -->
    
    <!-- 主要颜色 -->
    <Color x:Key="MechanicusDarkBrown">#1a0f0a</Color>
    <Color x:Key="MechanicusSecondaryBrown">#2a1f1a</Color>
    <Color x:Key="MechanicusRustRed">#8b2e0b</Color>
    <Color x:Key="MechanicusBrassGold">#d4af37</Color>
    <Color x:Key="MechanicusParchmentWhite">#e8d4b0</Color>
    <Color x:Key="MechanicusMutedParchment">#9a8a7a</Color>
    <Color x:Key="MechanicusDarkBronze">#5a4a3a</Color>
    
    <!-- 半透明层 -->
    <Color x:Key="MechanicusOverlay">#cc1a0f0a</Color>
    
    <!-- SolidColorBrush 资源 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource MechanicusDarkBrown}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource MechanicusSecondaryBrown}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource MechanicusRustRed}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource MechanicusBrassGold}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource MechanicusParchmentWhite}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource MechanicusMutedParchment}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource MechanicusDarkBronze}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource MechanicusOverlay}"/>
    
    <!-- 金属渐变 -->
    <LinearGradientBrush x:Key="MetallicGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource MechanicusBrassGold}" Offset="0"/>
        <GradientStop Color="{StaticResource MechanicusRustRed}" Offset="0.5"/>
        <GradientStop Color="{StaticResource MechanicusDarkBronze}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- 边框金属渐变 -->
    <LinearGradientBrush x:Key="BorderMetallicBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource MechanicusDarkBronze}" Offset="0"/>
        <GradientStop Color="{StaticResource MechanicusBrassGold}" Offset="0.5"/>
        <GradientStop Color="{StaticResource MechanicusDarkBronze}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- 发光效果 -->
    <DropShadowEffect x:Key="GlowEffect" 
                      Color="{StaticResource MechanicusBrassGold}"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="0.6"/>
    
    <!-- 按钮样式 -->
    <Style x:Key="MechanicusButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMetallicBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HighlightBrush}"/>
                            <Setter Property="Effect" Value="{StaticResource GlowEffect}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource MechanicusRustRed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- TextBlock 样式 -->
    <Style x:Key="MechanicusTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HighlightBrush}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Effect" Value="{StaticResource GlowEffect}"/>
    </Style>
    
    <Style x:Key="MechanicusTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!-- TextBox 样式 -->
    <Style x:Key="MechanicusTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CaretBrush" Value="{StaticResource HighlightBrush}"/>
    </Style>

</ResourceDictionary>
